# ========================================
# CONFIGURAÇÃO DO BANCO DE DADOS POSTGRESQL
# ========================================
POSTGRES_HOST=localhost                          # Host do servidor PostgreSQL (localhost para desenvolvimento local)
POSTGRES_PORT=5546                               # Porta do PostgreSQL (padrão: 5432, customizado: 5546)
POSTGRES_DB=ezpocket_logs                        # Nome do banco de dados principal
POSTGRES_USER=ezpocket_user                      # Usuário do PostgreSQL
POSTGRES_PASSWORD=your_postgres_password_here    # Senha do usuário PostgreSQL (SUBSTITUIR)

# ========================================
# CONFIGURAÇÃO DO REDIS (SISTEMA DE FILAS)
# ========================================
REDIS_HOST=localhost                             # Host do servidor Redis
REDIS_PORT=6493                                  # Porta do Redis (padrão: 6379, customizado: 6493)
REDIS_DB=0                                       # Database Redis (0-15)

# ========================================
# OPENAI API
# ========================================
OPENAI_API_KEY=sk-proj-your_openai_api_key_here # Chave API OpenAI para modelos GPT (SUBSTITUIR)

# ========================================
# AWS ATHENA (DATA SOURCE ALTERNATIVO)
# ========================================
AWS_ACCESS_KEY=your_aws_access_key_here          # Access Key da AWS (SUBSTITUIR)
AWS_SECRET_KEY=your_aws_secret_key_here          # Secret Key da AWS (SUBSTITUIR)
AWS_REGION=us-east-1                             # Região AWS (ex: us-east-1, sa-east-1)
ATHENA_OUTPUT_S3=s3://your-bucket-name/          # Bucket S3 para resultados do Athena (SUBSTITUIR)
ATHENA_DATABASE=your_athena_database             # Nome do banco de dados no Athena (SUBSTITUIR)

# ========================================
# PORTAS DOS MICROSERVIÇOS
# ========================================
MAIN_APP_PORT=8000                               # Aplicação principal (API Gateway)
INTENT_VALIDATOR_PORT=5001                       # Agente: Validação de Intenção
HISTORY_PREFERENCES_PORT=5002                    # Agente: Histórico e Preferências
ROUTER_PORT=5005                                 # Agente: Roteador de Requisições
GENERATOR_PORT=5006                              # Agente: Gerador de Respostas
RESPONDER_PORT=5007                              # Agente: Responder Final
GRAPH_ORCHESTRATOR_PORT=5008                     # Orquestrador de Grafos (LangGraph)

# ========================================
# PORTAS DOS AGENTES DE ANÁLISE
# ========================================
PLAN_BUILDER_PORT=5009                           # Agente: Construtor de Planos
PLAN_CONFIRM_PORT=5010                           # Agente: Confirmação de Planos
USER_PROPOSED_PLAN_PORT=5011                     # Agente: Plano Proposto pelo Usuário
ANALYSIS_ORCHESTRATOR_PORT=5012                  # Agente: Orquestrador de Análise
PLAN_REFINER_PORT=5013                           # Agente: Refinador de Planos
SQL_VALIDATOR_PORT=5014                          # Agente: Validador SQL
AUTO_CORRECTION_PORT=5015                        # Agente: Correção Automática
ATHENA_EXECUTOR_PORT=5017                        # Agente: Executor Athena/PostgreSQL
PYTHON_RUNTIME_PORT=5018                         # Agente: Runtime Python para cálculos
FLOW_ORCHESTRATION_PORT=5004                     # Orquestrador de Fluxo Geral

# ========================================
# CONFIGURAÇÃO DO FRONTEND
# ========================================
FRONTEND_MODE=production                         # Modo do frontend: 'development' ou 'production'

# ========================================
# LIMPEZA DE JOBS (TIMEOUT)
# ========================================
JOB_CLEANUP_TIMEOUT=300                          # Timeout para limpeza de jobs em segundos (300s = 5 minutos)

# ========================================
# SINCRONIZAÇÃO DE DADOS (ATHENA → POSTGRESQL)
# ========================================
DATA_SYNC_PORT=5019                              # Porta do serviço de sincronização
DATA_SYNC_SCHEDULE="36 * * * *"                  # Cron schedule: executa no minuto 36 de cada hora
DATA_SYNC_ATHENA_TABLE=report_orders             # Tabela fonte no Athena
DATA_SYNC_POSTGRES_TABLE=order_report            # Tabela destino no PostgreSQL
DATA_SYNC_BATCH_SIZE=1000                        # Tamanho do lote para sincronização (registros por batch)
DATA_SYNC_MAX_RETRIES=3                          # Número máximo de tentativas em caso de falha
DATA_SYNC_RETRY_DELAY=300                        # Delay entre tentativas de retry (segundos)

# ========================================
# ORIGEM DOS DADOS (FONTE PRINCIPAL)
# ========================================
BD_REFERENCE=Local                               # Define fonte de dados: 'Local' (PostgreSQL) ou 'Athena' (AWS)

# ========================================
# KEYCLOAK (AUTENTICAÇÃO E AUTORIZAÇÃO)
# ========================================
KEYCLOAK_ADMIN=admin                             # Usuário admin do Keycloak
KEYCLOAK_ADMIN_PASSWORD=your_keycloak_admin_password  # Senha do admin Keycloak (SUBSTITUIR)
KEYCLOAK_PORT=8090                               # Porta do servidor Keycloak
KEYCLOAK_HOSTNAME=keycloak.ezpocket.com.br       # Hostname/domínio do Keycloak (produção)
KEYCLOAK_REALM=ezpocket-realm                    # Realm do Keycloak
KEYCLOAK_CLIENT_ID=ezpocket-client               # Client ID configurado no Keycloak
KEYCLOAK_CLIENT_SECRET=your_keycloak_client_secret_here  # Client Secret do Keycloak (SUBSTITUIR)

# ========================================
# SEGURANÇA
# ========================================
SECURE_COOKIES=false                             # true: HTTPS (produção), false: HTTP (desenvolvimento)

# ========================================
# REDIS COMMANDER (INTERFACE WEB DO REDIS)
# ========================================
REDIS_COMMANDER_USER=Admin                       # Usuário de acesso ao Redis Commander
REDIS_COMMANDER_PASSWORD=your_redis_commander_password_here  # Senha do Redis Commander (SUBSTITUIR)
